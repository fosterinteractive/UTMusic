{% embed "@layouts/main/main.twig" %}

  {% block content_single_page %}
    <div class="l-main--program">

      {% include "@organisms/content-header/content-header.twig" with {
          directory: directory,
          breadcrumbs: breadcrumbs,
          tabs: tabs,
          messages: messages,
          is_front: is_front,

          variation: variation,

          title_prefix: title_prefix,
          title: title,
          summary: summary,

          video: video,
          image_portrait: image_portrait,
          image_landscape: image_landscape,
          image_short: image_short,
          image_tall: image_tall,
        } only
      %}

      {# {% if hero_banner %}
        {{ hero_banner }}
      {% else %}
        <div class="l-main__header">
          <div class="l-main__header-title">
            {% include "@atoms/text/headings/heading.twig" with {
                html_element: 'h1',
                appearance: 'h1',
                text: title,
                url: link_url,
                id: id,
              } only
            %}
          </div>
        </div>

        {% if breadcrumbs is not empty and not is_front %}
          <div class="l-main__breadcrumbs l-section--[12]">
            <div class="l-section__zone-1">
              {{ breadcrumbs }}
            </div>
          </div>
        {% endif %}
      {% endif %} #}


      {% if moderation %}
        <div class="l-main__moderation">
          {{ moderation }}
        </div>
      {% endif %}

      {% if overview %}
        <div class="l-main--program__overview">
          {{ overview }}
        </div>
      {% endif %}

      {% if academic_info %}
        <div class="l-main--program__academic-info">
          {{ academic_info }}
        </div>
      {% endif %} 

      {# we do not need Faculty section on Program page any more  #}
      {# {% if faculty and number_items >= 0 %}
        <div class="l-section--[12] theme--white-bg l-section-spacing-top--medium l-section-spacing-bottom--medium">
          
          <div class="l-main--program__faculty l-section__zone-1 l-flex">
            <div class="l-main--program__media-title">
              {% include "@atoms/text/headings/heading.twig" with {
                  html_element: 'h2',
                  appearance: 'h2',
                  text: 'Faculty'|t,
                } only
              %}
            </div>

            {{ faculty }}
          </div>
        </div>
      {% endif %}  #}

      {% if supporting_details %}
        <div class="l-main--program__supporting-details">
          {{ supporting_details }}
        </div>
      {% endif %} 

      {% if featured_media %}

        {% if media_display == 'default' %}
          <div class="{% if auto_number_items_media < 1 %}l-section--[8]{% else %}l-section--[12]{% endif %} l-section-wrapper theme--dark-blue-bg l-section-spacing-top--small l-section-spacing-bottom--small">
            <div class="l-section__background">
            </div>
            <div class="l-main--program__media l-section__zone l-section__zone-1 l-flex">
              <div class="l-main--program__media-title">
                {% include "@atoms/text/headings/heading.twig" with {
                    html_element: 'h2',
                    appearance: 'h2',
                    text: 'Featured Media'|t,
                  } only
                %}
              </div>

              {{ featured_media }}
            </div>
          </div>
        {% elseif media_display == 'carousel' %}
          <div class="{% if number_items_media < 1 %}l-section--[8]{% else %}l-section--[12]{% endif %} l-section-wrapper theme--dark-blue-bg l-section-spacing-top--small l-section-spacing-bottom--small">
            
            <div class="l-section__background">
            </div>
            <div class="l-main--program__media l-section__zone l-section__zone-1">
              <div class="l-main--program-related__title">
                {% include "@atoms/text/headings/heading.twig" with {
                    html_element: 'h2',
                    appearance: 'h2',
                    text: 'Featured Media'|t,
                  } only
                %}
              </div>

              {% include "@organisms/listing/listing.twig" with {
                  directory: directory,
                  variation: 'media-carousel',
                  listing_items: featured_media,
                  number_items: number_items_media,
                } only
              %}
            </div>
          </div>
        {% endif %}
      {% endif %}

    </div>
  {% endblock content_single_page %}
  
{% endembed %}
