<header class="o-header">
  <div class="o-header__bottom">
    <div class="o-header__logo">
      {% include "@molecules/logo/logo.twig"
        with {
          directory: directory,
          variation: '--image',
          logo_image_src: 'images/logo.svg',
          logo_alt: site_name,
          url: front_page,
          is_front: is_front,
          width: 372,
          height: 91,
        } only
      %}
    </div>

    {% if header_shortcuts %}
      <div class="o-header__shortcuts">
        {{ header_shortcuts }}
      </div>
    {% endif %}

    {% if header_search %}
      <div class="o-header__search">
        {% include '@atoms/button/button.twig' with {
            directory: directory,
            variation: 'icon',
            html_element: 'a',
            url: '/search',
            id: 'toggle-icon-search',
            aria_label: 'Search this site'|t,
            icon: 'search'
          } only
        %}
      </div>
    {% endif %}

    {% if language_selector %}
      <div class="o-header__language-and-mobile-btn-wrapper">
        {{ language_selector }}
    {% endif %}

      <div class="o-header__mobile-btn-menu-triger">
        {% include '@atoms/button/button.twig' with {
            directory: directory,
            variation: 'icon',
            html_element: 'a',
            url: '#menu-mobile',
            id: 'toggle-icon',
            aria_label: 'Menu'|t,
            icon: 'hamburger'
          } only
        %}
      </div>

    {% if language_selector %}
      </div>
    {% endif %}
  </div>
</header>
