<header class="o-header">
  <div class="o-header__bottom">

    <div class="o-header__logo o-header__logo--{{ lang }}">

      {% if lang == 'en' %}

        {% include "@molecules/logo/logo.twig" with {
            directory: directory,
            logo_icon: 'logo',
            logo_icon_size: logo_icon_size,
            logo_icon_color: logo_icon_size,
            logo_aria_label: 'Mainspring',

            url: front_page,
            site_name: site_name,
          } only
        %}

      {% elseif lang == 'fr' %}

        {% include "@molecules/logo/logo.twig" with {
            directory: directory,
            logo_icon: 'logo',
            logo_icon_size: logo_icon_size,
            logo_icon_color: logo_icon_size,
            logo_aria_label: "Mainspring FR",

            url: front_page,
            site_name: site_name,
          } only
        %}

      {% endif %}
    </div>

    {% if language_selector %}
      <div class="o-header__language-and-mobile-btn-wrapper">
        {{ language_selector }}

        <div class="o-header__mobile-btn-menu-triger">
          {% include '@atoms/button/button.twig' with {
              directory: directory,
              variation: 'icon',
              html_element: 'a',
              url: '#menu-mobile',
              id: 'toggle-icon',
              aria_label: 'Menu'|t,
              icon: 'hamburger'
            } only
          %}
        </div>
      </div>
    {% endif %}
  </div>
</header>
