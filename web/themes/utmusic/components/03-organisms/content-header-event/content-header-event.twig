{# Set default hero class - 'o-hero' #}
{% set variation = variation|default('') %}

{% if variation is not empty %}

  {# Add BEM variation '--' prefix if missing #}
  {% if variation starts with '--' %}
    {# Do nothing #}
  {% else %}
    {% set variation = '--' ~ variation %}
  {% endif %} 

{% endif %}

<div class="o-hero-media{{ variation }}">

  <div class="o-hero-media__bg-decoration">
    {# it's a placeholder for background #}
    {% if sb_demo %}
      <div style="background:#EDF8FC; width:100%; height:100%; "></div>
    {% else %}
      <img alt="" aria-hidden="true" src="/themes/utmusic/images/header-color-min.png" />
    {% endif %}
  </div>

  {% if image %}
    <div class="o-hero-media__image {% if variation %}o-hero-media{{ variation }}__image{% endif %}">
      {% if image %}
        {{ image }}
      {% endif %}
    </div>
  {% endif %}

  <div class="o-hero-media__text {% if variation %}o-hero-media{{ variation }}__text-wrapper{% endif %}">

    <div class="o-hero-media__text {% if variation %}o-hero-media{{ variation }}__text{% endif %}">
      {% if title_prefix or title %}
        <h1 class="a-heading__h1">
          {% if title_prefix %}
            <span class='o-hero-media__title-prefix {% if variation %}o-hero-media{{ variation }}__title-prefix{% endif %}'>
              {{ title_prefix }}
            </span>
          {% endif %}
          
          {% if title %}
            <span class='o-hero-media__title'>
              {{ title }}
            </span>
          {% endif %}
        </h1>
      {% endif %}

      {% if summary %}
        <div class="o-hero-media__summary {% if variation %}o-hero-media{{ variation }}__summary{% endif %}">
          {{ summary }}
        </div>
      {% endif %}

      {% if event_types %}
        <div class="o-hero-media__tags {% if variation %}o-hero-media{{variation}}__tags{% endif %}">
          {% for item in event_types %}
            {% include '@atoms/chip/chip.twig' with {
                text: sb_demo ? item.type : item,
              } only 
            %}
          {% endfor %}
        </div>
      {% endif %}
    </div>

    {% if variation == '--event-text' %}
    <div class="o-hero-media--event-text__info_and_button">
    {% endif %}
      {% if event_date or event_time or event_location %}
        <div class="o-hero-media__info {% if variation %}o-hero-media{{variation}}__info{% endif %}">
          <div class="o-hero-media__info-date">
            {% include "@atoms/icon/icon-sprite/icon-sprite.twig" with {
                directory: directory,
                icon: 'calendar',
              } only 
            %}
            {{ event_date }}
          </div>
          <div class="o-hero-media__info-time">
            {% include "@atoms/icon/icon-sprite/icon-sprite.twig" with {
                directory: directory,
                icon: 'timer',
              } only 
            %}
            {{ event_time }}
          </div>
          <div class="o-hero-media__info-location">
            {% include "@atoms/icon/icon-sprite/icon-sprite.twig" with {
                directory: directory,
                icon: 'location',
              } only 
            %}
            {{ event_location }}
          </div>
          
        </div>
      {% endif %}

      {% if url and label %}
        <div class="o-hero-media__button {% if variation %}o-hero-media{{variation}}__button{% endif %}">
          {% include "@atoms/button/button.twig" with {
              label: label,
              html_element: 'a',
              variation: '',
              url: url,
              target: target,
              aria_label: aria_label,
              icon: 'external link',
              alignment: 'left',
            } only
          %}
        </div>
      {% endif %}
    {% if variation == '--event-text' %}
    </div>
    {% endif %}

  </div>

  {% if breadcrumbs is not empty and not is_front %}
    <div class="o-hero-media__breadcrumbs {% if variation %}o-hero-media{{variation}}__breadcrumbs{% endif %}">
    {{ breadcrumbs }}
    </div>
  {% endif %}

</div>