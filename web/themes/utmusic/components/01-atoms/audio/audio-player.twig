
{% if items %}
  <div class="m-audio-player__wrapper">
    {% include "@atoms/icon/icon-sprite/icon-sprite.twig" with {
        directory: directory,
        icon: 'volume',
      } only 
    %}

    {% if btn_label %}
      <button type="button" data-file-component="play">{{btn_label}}{% if aria_label%} <div class="u-visually--hidden">{{ aria_label|t }}</div>{% endif %}</button>
    {% endif %}

    {% for item in items %}
      <div class="m-audio-player"{% if data_attr %} data-file-component="{{data_attr}}"{% endif %}>
        {{ item.content }}
      </div>
    {% endfor %}
  </div>
{% endif %}

